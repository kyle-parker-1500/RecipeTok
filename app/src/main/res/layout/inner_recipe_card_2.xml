<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_home_background_color"
    android:orientation="vertical"
    android:padding="30dp">


    <TextView
        android:id="@+id/instructionsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Instructions: "
        android:textColor="@color/my_home_text_color"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/innerRecipeInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:maxLines="@integer/material_motion_duration_long_2"
        android:text="Instructions"
        android:textColor="@color/my_home_text_color"
        android:textSize="18sp" />

</LinearLayout>